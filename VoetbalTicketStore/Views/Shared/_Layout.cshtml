@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}
@helper selected(string c, string culture)
{
    if (c == culture)
    {
        @:checked="checked"
    }
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Voetbal Ticket Store</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/css/ticketstore.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")" class="pull-left"><img src="~/Content/img/logo.png" style="width: 50px; padding: 5px;" /></a>

                @Html.ActionLink("Voetbal Ticket Store ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resources.strings.Competitie<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink(@Resources.strings.Clubs, "Index", "Club")</li>
                            <li>@Html.ActionLink(@Resources.strings.Stadions, "Index", "Stadion")</li>
                            <li>@Html.ActionLink(@Resources.strings.Wedstrijden, "Index", "Wedstrijd")</li>
                            <li>@Html.ActionLink(@Resources.strings.OverOns, "About", "Home")</li>

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resources.strings.Aankoopgeschiedenis<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink(@Resources.strings.Bezoekers, "Index", "Bezoeker")</li>
                            <li>@Html.ActionLink(@Resources.strings.Geschiedenis, "Index", "Bestelling")</li>
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resources.strings.Taal<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("NL", "SetCulture", "Home", routeValues: new { culture = "nl" }, htmlAttributes: new { })</li>
                            <li>@Html.ActionLink("FR", "SetCulture", "Home", routeValues: new { culture = "fr" }, htmlAttributes: new { })</li>
                            <li>@Html.ActionLink("EN", "SetCulture", "Home", routeValues: new { culture = "en" }, htmlAttributes: new { })</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Laurens De Wispelaere</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/Scripts/ticketstore.js"></script>

        @RenderSection("scripts", required: false)
</body>
</html>
